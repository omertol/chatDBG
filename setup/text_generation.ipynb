   "source": [
    "# This notebook generates input-output pairs of \"translation\" for fine-tuning the dicta model.\n",
    "# The input is one of Ben-Gurion's transcripts, and the output is the everyday version of same transcript as generated by OpenAI's GPT-4o."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "85bc4543",
   "metadata": {},
   "outputs": [],
   "source": [
    "import pandas as pd\n",
    "import os\n",
    "import torch\n",
    "from openai import OpenAI"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "d68b35dd",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Load data\n",
    "DATA_PATH = './data/'\n",
    "pickle_file = os.path.join(DATA_PATH, 'prepd_data.pkl')\n",
    "df = pd.read_pickle(pickle_file)\n",
    "\n",
    "# Set up device\n",
    "api_key=\"YOUR-API-KEY\"\n",
    "client = OpenAI(api_key = api_key)\n",
    "\n",
    "DEVICE = torch.device(\"cuda\" if torch.cuda.is_available() else \"cpu\")\n",
    "print(\"Using device:\", DEVICE)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "5c38e605",
   "metadata": {},
   "outputs": [],
   "source": [
    "N=30"
    "syntetic_df = df[['book_id', 'combined_info']][:N].copy()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "57a84537",
   "metadata": {},
   "outputs": [],
   "source": [
    "def rewrite_text(text, language=\"Hebrew\"):\n",
    "    try:\n",
    "        system_prompt = f\"\"\"\n",
    "        You are an assistant that rewrites text in {language}.\n",
    "        \n",
    "        1. Rewrite the text in everyday, natural language.\n",
    "        2. Keep the original meaning, as well as the speaker's perspective and tone.\n",
    "        3. The output should be approximately the same length as the original text.\n",
    "        \"\"\".strip()\n",
    "\n",
    "        response = client.chat.completions.create(\n",
    "            model=\"gpt-4o-mini\",\n",
    "            messages=[\n",
    "                {\"role\": \"system\", \"content\": system_prompt},\n",
    "                {\"role\": \"user\", \"content\": f\"Rewrite this text:\\n\\n{text}\"}\n",
    "            ],\n",
    "            temperature=0,\n",
    "        )\n",
    "        return response.choices[0].message.content.strip()\n",
    "\n",
    "    except Exception as e:\n",
    "        print(f\"Error rewriting: {e}\")\n",
    "        return None\n",
    "\n",
    "# Apply to synthetic data\n",
    "syntetic_df['rewritten'] = syntetic_df['combined_info'].apply(lambda x: rewrite_text(x))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "2c644f3f",
   "metadata": {},
   "outputs": [],
   "source": [
    "syntetic_df.to_csv(os.path.join(DATA_PATH,'translation_data.csv'), encoding='utf-8-sig', index=False)"
   ]
  }
